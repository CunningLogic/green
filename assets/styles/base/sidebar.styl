.site-sidebar
  padding 0 30px 30px 0px
  font-family $font-gotham 
  ul
    list-style none
    li
      &.active
        a
          border-left-color $dji-blue
      a
        display block  
        padding 1px 0 2px 15px
        margin-bottom 15px
        border-left 2px solid transparent
        text-transform uppercase
        font-size 13px
  @media (max-width $screen-xs-max)
    margin-left -15px
  
