/* Mixin for Web Fonts */
/* eg: webfont('/fonts', 'OpanSans', 'LightItalic', '300', 'italic') */
// just fix resource reference error
@import '../awe/font-awesome.css'
@import '../bootstrap/variables'

webfont(family, path, filename, type, weight = false, style = false)
  @font-face
    font-family: family
    if !!weight
      font-weight: weight
    if !!style
      font-style: style
    src: url(path + '/' + type + '/' + filename + '-' + type + '.eot')
    src: url(path + '/' + type + '/' + filename + '-' + type + '.eot?#iefix') format('embedded-opentype'),
    url(path + '/' + type + '/' + filename + '-' + type + '.woff') format('woff'),
    url(path + '/' + type + '/' + filename + '-' + type + '.ttf') format('truetype'),
    url(path + '/' + type + '/' + filename + '-' + type + '.svg#' + filename + type) format('svg')

/* End of Mixin */

/* Dji Font */
DjiFontFamily = 'Dji'
DjiFontFileName = 'Dji'
DjiFontPath = '/fonts/Dji'
webfont(DjiFontFamily, DjiFontPath, DjiFontFileName, 'Demi', 600)

/* Gotham */
GothamFamily = 'Gotham'
GothamFileName = 'Gotham'
GothamPath = '/fonts/Gotham'
webfont(GothamFamily, GothamPath, GothamFileName, 'Light', 300)
webfont(GothamFamily, GothamPath, GothamFileName, 'Book', 400)
webfont(GothamFamily, GothamPath, GothamFileName, 'Medium', 500)
webfont(GothamFamily, GothamPath, GothamFileName, 'Bold', 700)
webfont(GothamFamily, GothamPath, GothamFileName, 'Ultra', 800)

/* Open Sans */
OpenSansFamily = 'Open Sans'
OpenSansFileName = 'OpenSans'
OpenSansPath = '/fonts/opensans'
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'Light', 300, normal)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'LightItalic', 300, italic)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'Regular', 400, normal)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'Italic', 400, italic)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'Semibold', 600, normal)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'SemiboldItalic', 600, italic)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'Bold', 700, normal)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'BoldItalic', 700, italic)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'ExtraBold', 800, normal)
webfont(OpenSansFamily, OpenSansPath, OpenSansFileName, 'ExtraBoldItalic', 800, italic)

