.dji-btn
  display inline-block
  background $dji-blue
  font-weight normal
  font-size 12px
  color #fff
  height 39px
  line-height 20px
  padding 9px 10px
  border-radius 2px
  transition all 300ms
  border 1px solid $dji-blue
  cursor pointer
  &.no-radius
    border-radius 0px !important
  &:hover
    background-color transparent
    color $dji-blue
    text-decoration none

.dji-link
  position relative
  font-weight normal
  font-size 12px
  line-height 15px
  padding-bottom 10px
  color #fff
  cursor pointer
  display inline-block
  &:after,
  &:before
    content " "
    position absolute
    left 0
    right 0
    bottom 0
    height 2px
    background $dji-blue
  &:hover
    text-decoration none
    color #fff
    &:after
      left 0
      right 0
  &:after
    left 50%
    right 50%
    background #fff
    transition all 300ms
  .fa-play
    margin-left 8px
  &.dji-link-gray
    color $gray
    &:before
      background $dji-blue
    &:after
      background $gray
    
