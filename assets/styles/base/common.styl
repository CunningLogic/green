@import '../bootstrap/variables'

// 视频播放（按钮效果＋图片效果）START
.video-box
  position: relative
  display: inline-block
  margin: auto
  &:hover
    .fa-play
      color: rgba(255, 255, 255, .4)
  img
    max-width: 100%
    cursor: pointer
    display: block
  .fa-play
    position: absolute
    left: 50%
    top: 50%
    margin-left: -11px
    margin-top: -14px
    color: rgba(255, 255, 255, .8)
    font-size: 28px
    transition(color .3s ease)

img.cover {
  width 100%
  height 100%
  transform scale(1)
  transition all 1000ms
}

// img.cover:hover
  // transform scale(1.15)

img.scale {
  width 100%
  height 100%
  transform scale(1)
  transition all 1000ms
}
img.scale:hover
  transform scale(0.9)
// 视频播放（按钮效果＋图片效果）END

