.modal-browser
  position fixed
  width 100%
  height 100%
  display none
  #browserModal-cover
    position fixed
    left 0
    top 0
    height 100%
    width 100%
    background-color #111
    opacity 0.5
    z-index -1
  .modal-dialog
    margin-top 30px
    padding-top 20px
  .modal-content
    max-width 700px
    width 700px
    padding-bottom 80px
    padding-top 30px
    .header
      text-align center
    .dji-logo
      display block
      background-image url('/images/logo.png')
      margin-top 45px
      margin-bottom 40px
      width 50px
      height 29px
      margin-left auto 
      margin-right auto
      background-repeat no-repeat
    .h2-grey
      text-transform uppercase
      text-align center
    p
      display block
      margin-top 60px
      margin-bottom 60px
      text-align center
    .item-container
      width 600px
      margin 40px auto
      height 130px
      .item
        float left
        width 150px
        padding-top 20px
        padding-bottom 20px
        margin-left auto
        margin-right auto
        .pic
          width 100px
          height 100px
          margin 0 auto
          background-repeat no-repeat
        .i-c
          background-image url('/images/share/chrome.jpg')
        .i-f
          background-image url('/images/share/firefox.jpg')
        .i-s
          background-image url('/images/share/safari.jpg')
        .i-e
          background-image url('/images/share/edge.jpg')
        a
          color $dji-blue
          cursor pointer
          display block
          img
            display block
            margin 0 auto
            max-width 100px
            width 100px
            height 100px
          h4
            text-align center
            margin-top 20px
            font-size 18px
            font-weight bold
