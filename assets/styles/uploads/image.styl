.upload-image-page{
  padding: 15px;

  .title{
    margin-bottom: 20px;
    color: #333;
  }

  .photo{
    position: relative;
    height: 300px;
    overflow: hidden;
    text-align: center;
    border: 1px solid #eee;
    padding: 10px;
    background-repeat: no-repeat;
    img{
      max-height: 100%;
      position: absolute;
      //top: 50%;
      //transform: translateY(-50%);
      //-webkit-transform: translateY(-50%);
      margin: auto;
      left: 10px;
      right: 10px;
      top: 10px;
      bottom: 10px;
    }
  }
  .info{
    margin-top: 8px;
    font-size: 12px;
  }

  .control{
    margin-top: 20px;
    .btn-submit{
      margin-left: 10px;
    }
  }

  .msg{
    margin-top: 10px;
    font-size: 12px;
  }
}

.btn-file-upload{
  position: relative;
  overflow: hidden;
  .file{
    position: absolute;
    opacity: 0;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}