.photo-page{
  height: 100%;
  line-height: 26px;
  overflow: hidden;
  position: relative;
  background-color: #333;
  color: rgba(242, 242, 242, 0.5);

  #photo-grid-thumb{
    height: 100%;
    .thumb-item{
      height: 33.33333333333333%;
    }
    .thumb-cell{
      height: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      text-align: center;
      position: relative;
      padding: 0;
    }
    .thumb-image{
      background-color: #666;
    }
    h3.thumb-title{
      font-size: 22px;
      width: 22px;
      text-align: left;
    }
    .thumb-text{
      left: 15px;
      text-align: left;
      width: 145px;
      font-size: 13px;
    }

    .bg-cover{
      position: absolute;
      color: rgb(138, 138, 138);
      background: rgba(0, 0, 0, 0.7);
      width: 100%;
      height: 100%;
      .text{
        font-size: 14px;
        //border-left: 1px solid;
      }
    }
  }

  #top-photos-swiper{
    position: absolute;
    z-index: -1;
    opacity: 0;
    top: 0;
    height: 100%;
    width: 100%;
    .swiper-wrapper{
      height: 100%;
      width: 100%;
    }
    .swiper-close{
      color: rgba(242, 242, 242, 0.5);
      opacity: 1;
      text-shadow: none;
      width: 20px;
      height: 20px;
      background-image: url("/images/bestme/icons.svg");
      background-position: -12px -56px;
      background-color: transparent;
    }
  }

  .item{
    //position: absolute;
    height: 100%;
    width: 100%;
    //background: #7e6346 url(/images/bestme/bg-wood.jpg) center;
    background-size: cover;
  }

  .photo{
    overflow: hidden;
    position: absolute;
    max-height: 96%;
    border-radius: 2px;
    border: 0px solid rgba(255, 255, 255, 0.8);
    top: 50%;
    transform: translateY(-50%) rotate(2deg) translateZ(0);
    -webkit-transform: translateY(-50%) rotate(2deg) translateZ(0);
    background: rgba(0, 0, 0, 0.5);
    left: 20px;
    right: 20px;
  }
  .photo img{
    vertical-align: middle;
    min-height: 200px;
  }

  .desc, .title{
    width: 100%;
    background: rgba(27, 27, 27, 0.6);
    color: rgba(242, 242, 242, 0.5);
    position: absolute;
    bottom: 0;
    padding: 15px;
    left: 0;
    right: 0;
    z-index: 9;
  }
  .title{
    top: 0;
    bottom: auto;
    text-align: center;
    font-size: 20px;
    //background: transparent;
    color: #d4b050;
  }
  .desc{
    overflow: auto;
    max-height: 110px;
    color: rgb(138, 138, 138);
  }
  .desc-title{
    //color: #d4b050;
  }
}