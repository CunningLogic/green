.transition-page {
   position: relative;
   width: 100%;
   height: 100%;
   background-size: cover;

  .transition-page-inner{
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    width: 100%;
  }
  .transition-wrap{
    width: 63px;
    text-align: center;
    border-radius: 3px;
    padding: 10px;
    height: 360px;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }
  a.link-page { color: #a6d518;}
  a.link-page:visited { color: #a6d518; }

  .transition-icon{
    text-align: center;
    font-size: 25px;
    margin-top: 5px;
  }
}


