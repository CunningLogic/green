.home-page {
   position: relative;
   width: 100%;
   height: 100%;
   overflow: hidden;
   background-color: #333;
   color: rgba(242, 242, 242, 0.5);

  .btn-circle{
    margin: 40px auto 0px;
    display: block;
    width: 150px;
    height: 150px;
    color: #333;
    border: 5px solid;
    border-color: rgba(166, 213, 24, 0.1);
    border-radius: 50%;

    text-align:center;
    background: #fff;
    background: radial-gradient(rgba(166, 213, 24, 0.6), #fff);
  }

  .bg-cover{
    width: 100%;
    height: 100%;
    position: absolute;
    background: rgba(0, 0, 0, 0.3);
  }

  .cell{
    padding: 0;
  }
  .bestme-title{
     width: 22px;
  }
  .vr-text{
    width: 22px;
    font-size: 20px;
    float: left;
  }

  .bestme-year{
    position: absolute;
    top: 80px;
    left: 0;
    max-height: 190px;
    width: 90%;
    overflow: hidden;
  }
  .year-title{
    text-align: center;
    font-size: 20px;
    //border-bottom: 1px solid rgba(242, 242, 242, 0.2);
    //padding-bottom: 10px;
  }
  .year-desc{
    line-height: 25px;
    margin-top: 20px;
    text-align: center;
  }

  .picture{
    height: 100%;
    background-size: cover;
    background-position: center;
    background-color: #666;
  }
  .sub-title{
    margin: 10px 0 20px 0;
  }
  .tags{
    margin-top: 10px;
    text-align: center;
  }
}