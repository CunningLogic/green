.editor-page{
  padding: 0;
  height: 100%;

  .content {
    height: 100%;
    overflow: auto;
    -webkit-overflow-scrolling : touch;
    padding: 15px;
  }

  .panel{
    margin-bottom: 20px;
    border-bottom: 1px dashed #ccc;
  }
  .item{
    background: #fff;
    padding: 12px 15px;
    margin-top: 5px;
  }
  .picture-wrap{
    padding: 0;
    text-align: center;
  }
  .btn-upload{
    display: block;
  }
  .picture{
    border: 1px solid #ececec;
    height: 65px;
    padding: 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  .picture img{
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
  }
  .picture-desc{
    font-size: 12px;
    color: #777;
  }

  input.text{
    margin-bottom: 5px;
    width: 100%;
    padding: 8px;
    border: none;
    background: #eee;
    border-radius: 2px;
  }
  input.space{
    margin: 6px 0 15px 0;
  }

  .desc{
    padding-right: 0;
  }
  .textarea{
    background: #eee;
    border: none;
    width: 100%;
    padding: 8px;
    min-height: 85px;
    border-radius: 2px;
  }

  .controls{
    position: fixed;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    width: 100%;
    left: 0;
    padding: 10px 15px;
    z-index: 9;
  }
}

.fancybox-editor{
  background: #fff;
}