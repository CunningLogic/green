.spring-page {
   position: relative;
   width: 100%;
   height: 100%;
   overflow: hidden;
   background-color: #333;
   color: rgb(138, 138, 138);
   background-image: url(/images/bestme/spring/bg-2017-blur.jpg);
   background-size: cover;
   background-position: center;

  .bg-cover{
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(43, 42, 42, 0.8);
  }

  .vr-line{
    position: absolute;
    width: 1px;
    height: 320px;
    background: rgba(242, 242, 242, 0.2);
    left: -10px;
  }
  .vr-line-rignt{
    left: auto;
    right: -10px;
  }

  .year-title{
    position: absolute;
    text-align: center;
    //border: 1px solid rgba(223,0,35,0.6);
    border-radius: 4px;
    padding: 5px;
    font-size: 20px;
    left: 0px;
    width: 39px;
    margin: auto;
    right: 0px;
    z-index: 2;
  }
  .year-desc{
    position: absolute;
    margin: auto;
    text-align: center;
    right: 0;
    left: 0;
    bottom: 50px;
    z-index: 2;
    color: rgba(242, 242, 242, 0.3);
    //text-shadow: 1px 2px 3px #999;
  }
  .picture{
    position: absolute;
    opacity: 0.6;
    top: 55%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    z-index: 1;
  }
  .sub-title{
    margin: 10px 0 20px 0;
  }
  .tags{
    margin-top: 10px;
    text-align: center;
  }
}