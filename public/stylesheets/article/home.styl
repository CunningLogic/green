.container{
  max-width:990px;
  ul{
    list-style:none;
    padding:0;
    margin:0;
  }
  h3{
    font-size:26px;color:#666;
  }
  h4{
    font-size:20px;
  }
  h3.section-title{margin-bottom:20px;}

  .main{
    margin-top:60px;
  }
  header{
    .small{font-size:14px;margin-left:10px;}
  }
  .article{
    border-bottom: 1px dashed #ccc;
    padding:10px 0 15px 0;
    &:first-child{padding-top:0;}
    a.wrap{
      display:block;
      text-decoration:none;
      &:hover{
        .title{opacity:0.8;}
      }
    }
    .title{
      border-left: 3px solid #3cab35;
      padding-left: 10px;
      color: #3cab35;
      transition:color 0.3s ease-out;
      margin-left: 5px;
    }
    p{
      color:#777;
    }
    .author,.date{color:#999;}
    .author{
      margin-right: 15px;
    }
  }
  .cate-box{
    margin-top: 45px;
    .cate-list:after{
      content:'';
      display:block;
      clear:both;
    }
    li.cate{
      margin-right:10px;
      float:left;
      a{
        background: #a6d518;
        padding: 15px;
        border-radius: 50%;
        color: #fff;
        display: block;
        text-decoration:none;
        transition:background 0.3s ease-out;
      }
      a:hover{
        background:#3cab35;
      }
    }
  }
}